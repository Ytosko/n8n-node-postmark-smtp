{
    "compilerOptions": {
        "rootDirs": [
            "nodes",
            "credentials"
        ],
        "outDir": "dist",
        "target": "ES2019",
        "lib": [
            "ES2019",
            "DOM"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "nodes/**/*.ts",
        "credentials/**/*.ts"
    ]
}